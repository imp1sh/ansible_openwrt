{% endif %}
{% if bootitem['instance'] is defined %}
	option instance "{{ bootitem['instance'] }}"
{% endif %}
{% if bootitem['dhcp_option'] is defined %}
{% for dhcpoption in bootitem['dhcp_option'] %}
